{
  "extends": "stylelint-config-standard",
  "ignoreFiles": ["**/*.js", "**/*.tsx"],
  "rules": {
    "at-rule-no-unknown": [true, {
      ignoreAtRules: ["use", "nest"]
    }],
    "selector-pseudo-class-no-unknown": [true,{
      ignorePseudoClasses: ["global"]
    }],
    "property-no-unknown": [true, {
      "ignoreProperties": [
        "composes"
      ]
    }]
  }
}
